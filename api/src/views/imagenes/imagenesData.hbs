<div class="row">
  {{#each data}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ title }} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ description }} </p>
        <!-- DELETE REQUEST -->
        <img>{{image}}</img>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <p clsss="lead">There are not Notes yet.</p>
    </div>
  </div>
  {{/each}}
</div>